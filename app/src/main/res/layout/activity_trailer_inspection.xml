<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aircommercialservices.vechcheck.TrailerInspection">

    <ImageView
        android:id="@+id/LogoimageView6"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/airlogo" />

    <TextView
        android:id="@+id/TrailerInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.991"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.009" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.488">

        <Button
            android:id="@+id/alongsidetrailer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alongudertrailer" />

        <Button
            android:id="@+id/trsuspensionandsteering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alongsidetrailer"
            android:text="@string/suspension_and_steering"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/markingslamps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/trsuspensionandsteering"
            android:text="@string/marklampsref"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/trailerbrakesandtyres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/markingslamps"
            android:text="@string/trailer_brakes_and_tyres"
            android:visibility="invisible"/>


    </RelativeLayout>

    <Button
        android:id="@+id/savetrailerinspectionbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="82dp"
        android:layout_marginLeft="630dp"
        android:layout_marginRight="82dp"
        android:layout_marginStart="630dp"
        android:layout_marginTop="423dp"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        android:visibility="invisible"/>

</android.support.constraint.ConstraintLayout>
